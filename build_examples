#!/bin/sh

cd ../three-d

for EXAMPLE in triangle shapes2d shapes volume texture mandelbrot logo image fog picking normals fireworks wireframe sprites forest environment pbr lighting lights statues
do 
    wasm-pack build examples/$EXAMPLE --target web --out-name $EXAMPLE --out-dir ../../../asny.github.io/three-d/0.11
    cargo run --example $EXAMPLE --release "../asny.github.io/three-d/0.11/$EXAMPLE.png"
done

cp -R examples/assets/ ../asny.github.io/three-d/0.11/examples/assets/

cd ../asny.github.io
rm three-d/0.11/.gitignore
rm three-d/0.11/*.d.ts